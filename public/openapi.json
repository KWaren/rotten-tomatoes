{
  "openapi": "3.0.1",
  "info": {
    "title": "My Rotten Tomatoes API",
    "version": "1.0.0",
    "description": "API for a movie review application, providing endpoints for managing movies, users, comments, and ratings."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthRegister"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "409": {
            "description": "Email already in use"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login with email and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Session created (cookie)"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "Logout the current user",
        "responses": {
          "200": {
            "description": "Logged out successfully"
          }
        }
      }
    },
    "/api/auth/resend": {
      "post": {
        "summary": "Resend verification email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email resent"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/auth/verify/{token}": {
      "get": {
        "summary": "Verify email token",
        "parameters": [
          {
            "in": "path",
            "name": "token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect after verification"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/api/me": {
      "get": {
        "summary": "Get current authenticated user",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Current user data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/me/comments": {
      "get": {
        "summary": "Get comments for the current user",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of comments by the current user"
          }
        }
      }
    },
    "/api/me/ratings": {
      "get": {
        "summary": "Get ratings for the current user",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of ratings by the current user"
          }
        }
      }
    },
    "/api/movies": {
      "get": {
        "summary": "List movies",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "in": "query",
            "name": "genre",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "userId",
            "schema": {
              "type": "integer"
            },
            "description": "Filter movies by user's favorites"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of movies"
          }
        }
      }
    },
    "/api/movies/{id}": {
      "get": {
        "summary": "Get movie details",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Movie details"
          },
          "404": {
            "description": "Movie not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a movie (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Movie deleted"
          },
          "404": {
            "description": "Movie not found"
          }
        }
      }
    },
    "/api/comments": {
      "get": {
        "summary": "List comments for a movie",
        "parameters": [
          {
            "in": "query",
            "name": "movieId",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A list of comments"
          }
        }
      },
      "post": {
        "summary": "Create a comment",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CommentInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comment created"
          }
        }
      }
    },
    "/api/comments/{id}": {
      "put": {
        "summary": "Update a comment",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comment updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a comment",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted"
          }
        }
      }
    },
    "/api/ratings": {
      "get": {
        "summary": "Get all ratings",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of ratings"
          }
        }
      },
      "post": {
        "summary": "Add or update a rating",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RatingInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Rating created or updated"
          }
        }
      }
    },
    "/api/ratings/{id}": {
      "get": {
        "summary": "Get a rating by ID",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Rating data"
          },
          "404": {
            "description": "Rating not found"
          }
        }
      },
      "put": {
        "summary": "Update a rating",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "score": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                  }
                },
                "required": ["score"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Rating updated"
          },
          "404": {
            "description": "Rating not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a rating",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Rating deleted"
          },
          "404": {
            "description": "Rating not found"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "List users (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of users"
          }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "summary": "Get user by ID (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User data"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "summary": "Update a user (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a user (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted"
          }
        }
      }
    },
    "/api/directors": {
      "get": {
        "summary": "List directors",
        "responses": {
          "200": {
            "description": "A list of directors"
          }
        }
      }
    },
    "/api/kpis": {
      "get": {
        "summary": "Get dashboard KPIs (admin)",
        "description": "Returns key performance indicators including user counts, movie counts, comments count, popular genres, and movies by age group",
        "responses": {
          "200": {
            "description": "Key Performance Indicators",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "verifiedUsersCount": {
                      "type": "integer",
                      "description": "Number of verified users"
                    },
                    "totalAccountsCount": {
                      "type": "integer",
                      "description": "Total number of user accounts"
                    },
                    "totalMoviesCount": {
                      "type": "integer",
                      "description": "Total number of movies"
                    },
                    "totalCommentsCount": {
                      "type": "integer",
                      "description": "Total number of comments"
                    },
                    "genresPopular": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "genre": {
                            "type": "string"
                          },
                          "avgRating": {
                            "type": "string"
                          },
                          "movieCount": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "moviesByAgeGroup": {
                      "type": "object",
                      "description": "Top 5 movies per age group",
                      "additionalProperties": {
                        "type": "array"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/import-movie": {
      "post": {
        "summary": "Import a movie from TMDB (admin)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ImportMovie"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Movie imported successfully"
          },
          "404": {
            "description": "Movie not found on TMDB"
          }
        }
      }
    },
    "/api/favorites": {
      "post": {
        "summary": "Toggle a movie as favorite",
        "description": "Add or remove a movie from user favorites (toggle)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "integer"
                  },
                  "movieId": {
                    "type": "integer"
                  }
                },
                "required": ["userId", "movieId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Favorite status toggled",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "isFavorite": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "name": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "profession": {
            "type": "string"
          },
          "birthday": {
            "type": "string",
            "format": "date-time"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "verified": {
            "type": "boolean"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "tmdbId": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "originalTitle": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tagline": {
            "type": "string"
          },
          "posterUrl": {
            "type": "string",
            "format": "uri"
          },
          "backdropUrl": {
            "type": "string",
            "format": "uri"
          },
          "releaseDate": {
            "type": "string",
            "format": "date-time"
          },
          "director": {
            "type": "string"
          },
          "genres": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "runtime": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "voteAverage": {
            "type": "number",
            "format": "float"
          },
          "voteCount": {
            "type": "integer"
          },
          "budget": {
            "type": "integer"
          },
          "revenue": {
            "type": "integer"
          },
          "homepage": {
            "type": "string",
            "format": "uri"
          },
          "originalLanguage": {
            "type": "string"
          },
          "cast": {
            "type": "object"
          },
          "crew": {
            "type": "object"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "userId": {
            "type": "integer"
          },
          "movieId": {
            "type": "integer"
          }
        }
      },
      "Rating": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "score": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10
          },
          "userId": {
            "type": "integer"
          },
          "movieId": {
            "type": "integer"
          }
        }
      },
      "Role": {
        "type": "string",
        "enum": ["USER", "ADMIN"]
      },
      "AuthRegister": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AuthLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CommentInput": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "movieId": {
            "type": "integer"
          }
        },
        "required": [
          "content",
          "movieId"
        ]
      },
      "RatingInput": {
        "type": "object",
        "properties": {
          "score": {
            "type": "integer"
          },
          "movieId": {
            "type": "integer"
          }
        },
        "required": [
          "score",
          "movieId"
        ]
      },
      "ImportMovie": {
        "type": "object",
        "properties": {
          "tmdbId": {
            "type": "integer"
          }
        },
        "required": [
          "tmdbId"
        ]
      },
      "FavoriteToggle": {
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer"
          }
        },
        "required": [
          "movieId"
        ]
      }
    },
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "next-auth.session-token"
      }
    }
  }
}